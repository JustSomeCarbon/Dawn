space::PatternTest;

fn patternTest int ()
{
    IO::out(factorial(5));
    IO::out(match_on_value(1));
}

fn factorial int (n int) {
    { n <= 0 -> return 1;
    | -> n * factorial(n-1);
    }
}

fn match_on_value string (n int) {
    on n do {
        0 -> "match on zero";
        | 1 -> "match on 1";
        | -> "no match found";
    }
    "error: something went wrong";
}